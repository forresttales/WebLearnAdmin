<div class="container" style="padding: 0px 0px 0px 0px; background-color: yellow; height: 400px">
	
	<div class="row" style="height: 20px;"></div>
	<div class="row-end">&nbsp;</div>			
	
	<div class="row">
		<div align="center">
			<h2>Sign In</h2>
		</div>      		
		<div class="row-end">&nbsp;</div>				
	</div>      		
	
	<div class="row" style="height: 30px;"></div>
	<div class="row-end">&nbsp;</div>			
	
	<%= form_for(@institute) do |f| %>
	<!-- = render 'shared/error_messages', object: f.object -->			
	

	
	<div class="row">
		<div class="col6" align="right">
			<%= label_tag(:username) %>
						
		</div>
		<div class="col6" align="left">
			<%= text_field_tag(:username) %>			
		</div>      	
		<div class="row-end">&nbsp;</div>		
	</div>      		
	
	<div class="row" style="height: 10px;"></div>      		
	<div class="row-end">&nbsp;</div>			

	<div class="row">
		<div class="col6" align="right">
			<%= label_tag(:password) %>			
		</div>
		<div class="col6" align="left">
			<%= password_field_tag(:password) %>			
		</div>      	
		<div class="row-end">&nbsp;</div>		
	</div>      		
	
	<div class="row" style="height: 10px;"></div>      		
	<div class="row-end">&nbsp;</div>			
		      		
	<div class="row">
		<div class="col12" align="center">
			<%= submit_tag("Log In") %>			
		</div>
		<div class="row-end">&nbsp;</div>				
	</div>      		
						
	<% end %>
			
</div>
		
