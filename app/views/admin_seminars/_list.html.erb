<script>
	
		
		// $('*[data-confirm]').click(function(){
	    	// return confirm($(this).attr('data-confirm'));
		// });


        function scrollPos() {
            // var div = document.getElementById("scroll1").scrollLeft;
            // document.getElementById("pos").innerHTML = div;
            $("#pos").html($("#scroll1").scrollLeft());
        }
		
		function moveScroll() {
			// alert('moveScroll');
			$("#scroll1").scrollLeft($("#pos").html());
		}
				
				
		$(function() {
		
    		var $cols = $('colgroup');

			$("table#admin-seminars tr:nth-child(even)").addClass('gray');
			$("table#admin-seminars tr:nth-child(odd)").addClass('white');

		    // id								3
		    // created_at						4
		    // name_first						5
		    // name_last						6
		    // name_title						7
		    // type_affiliation					8
		    // name_affiliation					9

			var cell;
			var cellIndex;
			var row;
			var rowIndex;
			var header;
			var cellTh;
			var cellIndexTh;
			
			$("table#admin-seminars th").mouseover ( function () {

				cellTh = $(this).closest('th');
				cellIndexTh = cellTh[0].cellIndex;
				cellIndexTh += 1;
				
				$("table#admin-seminars td:nth-child(" + cellIndexTh + ")").addClass('hover-col');
				$(this).addClass('hover-col');
				
			}).mouseout ( function() {
				
				$("table#admin-seminars td:nth-child(" + cellIndexTh + ")").removeClass('hover-col');				
				$(this).removeClass('hover-col');
				
			});
			
			$("table#admin-seminars td").mouseover ( function () {
				
				cell = $(this).closest('td');
				cellIndex = cell[0].cellIndex;
				cellIndex += 1;
				row = cell.closest('tr');
				rowIndex = row[0].rowIndex;
				
				switch(cellIndex)
				{
				case 1:
					header = "th_view"	  
				  break;
				case 2:
					header = "th_delete"	  
				  break;
				case 3:
					header = "#th_id"	  
				  break;
				case 4:
					header = "#th_created_at"	  
				  break;
				case 5:
					header = "#th_updated_at"	  
				  break;
				case 6:
					header = "#th_name_first"	  
				  break;
				case 7:
					header = "#th_name_last"	  
				  break;
				case 8:
					header = "#th_name_title"	  
				  break;
				case 9:
					header = "#th_type_affiliation"	  
				  break;
				case 10:
					header = "#th_name_affiliation"	  
				  break;
				case 11:
					header = "#th_address"	  
				  break;
				case 12:
					header = "#th_city"	  
				  break;
				case 13:
					header = "#th_state"	  
				  break;
				case 14:
					header = "#th_zip"	  
				  break;
				case 15:
					header = "#th_phone"	  
				  break;
				case 16:
					header = "#th_email"	  
				  break;
				case 17:
					header = "#th_email_cc_1"	  
				  break;
				case 18:
					header = "#th_email_cc_2"	  
				  break;
				case 19:
					header = "#th_seminar_1"	  
				  break;
				case 20:
					header = "#th_seminar_1_text"	  
				  break;

				default:
					//
				}				

				$(header).addClass('hover-col');
		
				if (rowIndex % 2 === 0) {
					$("table#admin-seminars td:nth-child(" + cellIndex + ")").addClass('hover-col');
					row.removeClass('gray').addClass('hover-row');					
				}
				else {
					$("table#admin-seminars td:nth-child(" + cellIndex + ")").addClass('hover-col');
					row.removeClass('white').addClass('hover-row');										
				}		
			}).mouseout( function(){

				$(header).removeClass('hover-col');
				
				if (rowIndex % 2 === 0) {
					$("table#admin-seminars td:nth-child(" + cellIndex + ")").removeClass('hover-col');
					row.removeClass('hover-row').addClass('gray');					
				}
				else {
					$("table#admin-seminars td:nth-child(" + cellIndex + ")").removeClass('hover-col');
					row.removeClass('hover-row').addClass('gray');					
				}		
			});
			
			var rowSelect = -1;			
			
			$("table#admin-seminars td").on('click', function () {
	
				cell = $(this).closest('td');
				btn_delete = $(this).closest('form');
				row = cell.closest('tr');
				rowIndex = row[0].rowIndex;

				if (rowSelect !== -1) {
					$("table#admin-seminars tr").removeClass('row-select');
				}
				
				rowSelect = rowIndex;
				row.addClass('row-select');
				btn_delete.removeClass('btn-color').addClass('btn-color-select');
			});
	
	
			
			$(document).on('click', function(event) {
				// alert(event.target);
				elem = event.target.className;
				if ((elem === 'hover-col') || (elem === 'delete-btn') || (elem === 'member-table')) {
					//
				}
				else {
					$("table#admin-seminars tr").removeClass('row-select');					
				}
			});
		});
		
</script>



