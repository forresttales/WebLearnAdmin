<% provide(:title, 'Students') %>
	
	<% if @admin_students.any? %>

    <table id="admin_list_students" style="width: 1000px; height: 300px;" title="Students List" >    	    	
	    <tr align="left">
		    <th field="id" width = "40"><h4>ID</h4></th>
		    <th field="created_at" width = "180"><h4>Date</h4></th>			    		    	
		    <th field="name_first" width = "100"><h4>First Name</h4></th>
		    <th field="name_last" width = "100"><h4>Last Name</h4></th>		    
		</tr>
		<% @admin_students.each do |student| %>
	    <tr align="left">
		    <td width = "40"><h5><%= student.id %></h5></td>
		    <td width = "180"><h5><%= student.created_at %></h5></td>		    	
		    <td width = "100"><h5><%= student.name_first %></h5></td>
		    <td width = "100"><h5><%= student.name_last %></h5></td>	
		    	    
		    <!-- = link_to('View', {:action => 'view', :id => student.id}) -->		    
		     			    
		</tr>
		<% end %>	    	
	</table>
	<%= will_paginate @admin_students %>

	<% else %>
	<div class="row" style="color: red;">
		<h3>No record for Students</h3>
	</div>
	<div class="row-end">&nbsp;</div>			
	<% end %>
	
					
<div class="row" style="height: 20px;"></div>
<div class="row-end">&nbsp;</div>				
