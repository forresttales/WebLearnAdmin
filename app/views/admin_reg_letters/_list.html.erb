<!-- 
# Table name: reg_letters
#
#  id               :integer          not null, primary key
#  email            :string(255)      default(""), not null
#  name_title       :string(50)
#  name_affiliation :string(100)
#  created_at       :datetime
#  updated_at       :datetime 
-->

	<% if @admin_reg_letters.any? %>
					
    <table id="admin_list" style="width: 1000px;" title="Letters" >    	    	
	    <tr align="left">
		    <th field="id" width = "20"><h4>ID</h4></th>
		    <th field="created_at" width = "20"><h4>Date</h4></th>			    		    	
		    <th field="name_title" width = "50"><h4>Title</h4></th>
		    <th field="name_affiliation" width = "50"><h4>Affiliation</h4></th>
		    <th field="email" width = "50"><h4>Email</h4></th>		    		    
		</tr>
		<% @admin_reg_letters.each do |reg_letter| %>
	    <tr align="left">
		    <td width = "20"><h5><%= reg_letter.id %></h5></td>
		    <td width = "20"><h5><%= reg_letter.created_at.to_formatted_s(:db) %></h5></td>
		    <td width = "50"><h5><%= reg_letter.name_title %></h5></td>
		    <td width = "50"><h5><%= reg_letter.name_affiliation %></h5></td>
		    <td width = "50"><h5><%= reg_letter.email %></h5></td>
		    
		    <td width = "20"><h5>
		    <%= link_to('View', {:action => 'show', :id => reg_letter.id}) %>     
			</h5></td>
		    <td width = "20"><h5>
			<%= button_to "Delete", {:action => 'destroy', :id => reg_letter.id }, :method => :delete, data: { confirm: "Delete this record?" } %>		  
			</h5></td>
					     			    
		</tr>
		<% end %>	    	
	</table>
	<%= will_paginate @admin_reg_letters %>

	<% else %>
	<div class="row" style="color: red;">
		<h3>No record for Letters</h3>
	</div>
	<div class="row-end">&nbsp;</div>			

	<% end %>
				
