<% @title = "Delete Contact: #{@reg_letter.name}" %>


	<style>
	
		#signin-page {
			height: auto;
			min-height: 900px;
		}
	
		#signin-page #signin-page-inner {
		    width: 90%;
		    margin: 0 auto;
		}	

		div .table-signin {
			display: table;
			background-color: #DEDB3C;
			width: 1000px;
			border-radius: 20px;
			border:2px solid #254520;
			box-shadow: 1px 1px 10px #888888;
			padding-top: 40px;
			padding-bottom: 40px;
			padding-left: 10px;
			padding-right: 10px;			
		}
	
		.table-signin p {
			font-family: msyh; 
			font-size: 16px;
			color: #005187;"
		}
		
		.signin-btn {
		  
		  	display: inline-block;
		  	text-decoration: none; 
		  	width: 308px;
		  	height: 30px;
		  	background: linear-gradient(#000, #000);
		  	text-shadow: 1px 1px 1px #0E86B2; 
		  	border-radius: 6px;
		}
	
		.signin-btn:focus {
		  background: #CCC; 
		  color: #5F7A2A;
		  box-shadow: inset 0 1px 0 rgba(200,200,200,0.2);
		}
		
		.signin-btn:hover { 
		  box-shadow: inset 0 1px 1px rgba(255,255,255,0.2), 
		  inset 0 1.5em 1em rgba(255,255,255,0.3);
		}
		
		.signin-btn:active { 
		  box-shadow: inset 0 1px 1px rgba(255,255,255,0.2), 
		  inset 0 1.5em 1em rgba(0,0,0,0.3); 
		}
		
	</style>


	<div id="signin-page">
		
		<header>
	
			<%= render 'share/backtotop' %>

			<div style="height: 70px;"></div>
			
		</header>
		
		
		<div id="signin-page-inner">
			
			<div class="table-signin">
				<div class="row">
					
					<div class="cell-100percent" tabindex="1">

					  <h2>Delete Contact</h2>
					  
					  <%= form_for(:reg_letter, :url => {:action => 'destroy', :id => @reg_letter.id}, :method => :delete) do |f| -%>
					
					    <p>Are you sure you want to permanently delete this contact?</p>
					  
					    <p class="reference-name"><%= @reg_letter.name %></p>
					  
					    <div class="form-buttons">
					      <%= submit_tag("Delete Record") %>
					    </div>
					    
					  <% end %>
												
					</div>
					
				</div>
				
			</div>
			
		</div>	
		
	</div>					
					
