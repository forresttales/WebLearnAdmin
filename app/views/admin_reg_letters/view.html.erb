<% @title = "News Letter Registration Record" %>

	<style>
	
		#signin-page {
			height: 800px;
		}
	
		#signin-page #signin-page-inner {
		    width: 50%;
		    margin: 0 auto;
		}	

		div .table-signin {
			display: table;
			background-color: #DEDB3C;
			width: 700px;
			border-radius: 20px;
			border:2px solid #254520;
			box-shadow: 1px 1px 10px #888888;
			padding-top: 40px;
			padding-bottom: 40px;
			padding-left: 60px;
		}
	
		.table-signin p {
			font-family: msyh; 
			font-size: 16px;
			color: #005187;"
		}
		
	</style>


	<div id="signin-page">
		
		<header>
	
			<div style="height: 200px;"></div>
			
		</header>
		
		
		<div id="signin-page-inner">
			
			<div class="table-signin">
				<div class="row">
					
					<div class="cell-100percent" tabindex="1">

						<!-- 
						# Table name: reg_letters
						#
						#  id               :integer          not null, primary key
						#  email            :string(255)      default(""), not null
						#  name_title       :string(50)
						#  name_affiliation :string(100)
						#  created_at       :datetime
						#  updated_at       :datetime 
						-->
						
						<h1>News Letter Registration Record:</h1>
						<br />
						<p>ID: <%= @reg_letter.id %></p>
						<br />
						<p>Created: <%= @reg_letter.created_at %></p>
						<br />
						<p>Updated: <%= @reg_letter.updated_at %></p>
						<br />
						<p>Title: <%= @reg_letter.name_title %></p>
						<br />
						<p>Affiliation: <%= @reg_letter.name_affiliation %></p>
						<br />
						<p>Email: <%= @reg_letter.email %></p>
												
					</div>
					
				</div>
				
			</div>
			
		</div>	
		
	</div>					
					
