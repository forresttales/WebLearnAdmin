      <dt>Slide 3</dt>
      <dd><%= image_tag("/assets/demo_featured-slide_735x360.gif", :alt => '') %></dd>
      <dt>Slide 4</dt>
      <dd><%= image_tag("/assets/demo_featured-slide_735x360.gif", :alt => '') %></dd>
      <dt>Slide 5</dt>
      <dd><%= image_tag("/assets/demo_featured-slide_735x360.gif", :alt => '') %></dd>
