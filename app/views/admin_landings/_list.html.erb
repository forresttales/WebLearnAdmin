	<div>

		<%= link_to 'New', admin_landings_new_path %>
				
		 <!-- button_to "New", admin_landings_new_path  -->		 
		  
	</div>
	
	<div style="height: 30px;"></div>
	


	<% if @admin_landings.any? %>
					
    <table id="admin_list" style="width: 1000px;" title="Landings" >    	    	
	    <tr align="left">
		    <th field="id" width = "20"><h4>ID</h4></th>
		    <th field="created_at" width = "20"><h4>Date</h4></th>			    		    	
		    <th field="name" width = "50"><h4>Name</h4></th>
		    <th field="email" width = "50"><h4>Email</h4></th>		    		    
		    <th field="company" width = "50"><h4>Company</h4></th>
		</tr>
		<% @admin_landings.each do |landing| %>
	    <tr align="left">
		    <td width = "20"><h5><%= landing.id %></h5></td>
		    <td width = "20"><h5><%= landing.created_at.to_formatted_s(:db) %></h5></td>
		    <td width = "50"><h5><%= landing.name %></h5></td>
		    <td width = "50"><h5><%= landing.email %></h5></td>
		    <td width = "50"><h5><%= landing.company %></h5></td>
		    
		    <td width = "20"><h5>
		    <%= link_to('View', {:action => 'show', :id => landing.id}) %>     
			</h5></td>
		    <td width = "20"><h5>
		    <% if current_user.admin %>
			<%= button_to "Delete", {:action => 'destroy', :id => landing.id }, :method => :delete, data: { confirm: "Delete this record?" } %>
			<% end %>		  
			</h5></td>
					     			    
		</tr>
		<% end %>	    	
	</table>
	<%= will_paginate @admin_landings %>

	<% else %>
	<div class="row" style="color: red;">
		<h3>No record for Landings</h3>
	</div>
	<div class="row-end">&nbsp;</div>			

	<% end %>
				
<div class="row" style="height: 20px;"></div>
