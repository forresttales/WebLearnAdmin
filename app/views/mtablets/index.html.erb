		<script>

			selected_index = 0;
			last_index = 0;
			selected_id = "";
			last_id = "";
			function change_selected(selected_index) {
				selected_id = "#tabs" + selected_index;
				last_id = "#tabs" + last_index; 
				
				switch (last_index)
				{
				  	case 0:
						$(last_id).removeClass("mtab-selected").addClass("mtab-yellow");
						break;
				  	case 1:
				  	case 2:
				  	case 3:
				  	case 4:
				  	case 5:
				  	case 6:
				  	case 7:
				  	case 8:
						$(last_id).removeClass("mtab-selected").addClass("mtab-blue");
						break;
					default:
					//
				}
				
				switch (selected_index)
				{
				  	case 0:
						$(selected_id).removeClass("mtab-yellow").addClass("mtab-selected");
						break;
				  	case 1:
				  	case 2:
				  	case 3:
				  	case 4:
				  	case 5:
				  	case 6:
				  	case 7:
				  	case 8:
						$(selected_id).removeClass("mtab-blue").addClass("mtab-selected");
						break;
					default:
					//
				}
				
				last_index = selected_index;
			}				
				
			$('#tabs0').on('click', function() {
				change_selected(0);
			   	$.get("/mtablets", null, null, "script");
			});

			$('#tabs1').on('click', function() {
				change_selected(1);
			   	$.get("/mtab1lets", null, null, "script");
			});
	
			$('#tabs2').on('click', function() {
				change_selected(2);				
			   $.get("/mtab2lets", null, null, "script");
			});
	
			$('#tabs3').on('click', function() {
