			});
			
			$('#tabs5').on('click', function() {
				change_selected(5);
			   	$.get("/mtab5lets", null, null, "script");
			});

			$('#tabs6').on('click', function() {
				change_selected(6);
			   	$.get("/mtab6lets", null, null, "script");
			});

			$('#tabs7').on('click', function() {
				change_selected(7);
			   	$.get("/mtab7lets", null, null, "script");
			});

			$('#tabs8').on('click', function() {
				change_selected(8);
