<h1>access_publishers login</h1>

<div class="wrapper row3">
  <div id="container" class="clear">
    <div id="content">
      <div id="comments" style="height: 480px">
  	
			<div>
				<%= link_to "Return", publishers_path %>
			</div>
			<h2></h2>      	
	        <h2>Publisher Login</h2>
			<br />
		    <div id="content">
		      <div id="respond">
		      	
				  <%= form_tag(:action => 'attempt_login_publisher') do %>
				  <table>
				    <tr>
				      <th><%= label_tag(:username) %></th>
				      <td><%= text_field_tag(:username) %></td>
				    </tr>
				    <tr>
				      <th><%= label_tag(:password) %></th>
				      <td><%= password_field_tag(:password) %></td>
				    </tr>
				    <tr>
				      <th>
				      	
				      </th>	
				      <td><%= submit_tag("Log In") %></td>
				    </tr>
				  </table>
				  <% end %>
		        
		      </div>
		      
		    </div>
    
      </div>
    </div>
  </div>
</div>
