<% provide(:title, 'Publishers') %>

	<% if @admin_publishers.any? %>

    <table id="admin_list_publishers" style="width: 1000px; height: 300px;" title="Publishers List" >    	    	
	    <tr align="left">
		    <th field="id" width = "40"><h4>ID</h4></th>
		    <th field="created_at" width = "180"><h4>Date</h4></th>			    		    	
		    <th field="name" width = "100"><h4>Name of Publisher</h4></th>
		</tr>
		<% @admin_publishers.each do |publisher| %>
	    <tr align="left">
		    <td width = "40"><h5><%= publisher.id %></h5></td>
		    <td width = "180"><h5><%= publisher.created_at %></h5></td>		    	
		    <td width = "100"><h5><%= publisher.name %></h5></td>
		    
		    <!-- = link_to('View', {:action => 'view', :id => publisher.id})  -->		    
		    
		</tr>
		<% end %>	    	
	</table>
	<%= will_paginate @admin_publishers %>

	<% else %>
	<div class="row" style="color: red;">
		<h3>No record for Publishers</h3>
	</div>
	<div class="row-end">&nbsp;</div>			
	<% end %>
	
					
<div class="row" style="height: 20px;"></div>
<div class="row-end">&nbsp;</div>				
