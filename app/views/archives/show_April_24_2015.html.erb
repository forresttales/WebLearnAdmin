<% @title = "News Letter Registration Record" %>

	<style>
	
		#signin-page {
			height: 100%;
			min-height: 900px;
		}
	
		#signin-page #signin-page-inner {
		    width: 80%;
		    margin: 0 auto;
		}	

		div .table-signin {
			display: table;
			background-color: #DEDB3C;
			width: 880px;
			border-radius: 20px;
			border:2px solid #254520;
			box-shadow: 1px 1px 10px #888888;
			padding-top: 40px;
			padding-bottom: 40px;
			padding-left: 60px;
		}
	
		.table-signin p {
			font-family: msyh; 
			font-size: 16px;
			color: #005187;"
		}
		
	</style>


	<div id="signin-page">
		
		<header>
	
			<%= render 'share/backtotop' %>

			<div style="height: 40px;"></div>
			
		</header>
		
		
		<div id="signin-page-inner">
			
			<div class="table-signin">
				<div class="row">
					
					<div class="cell-100percent" tabindex="1">

						<!--
						# Table name: archives
						#
						#  id           :integer          not null, primary key
						#  article_id   :integer
						#  name_url     :string(100)
						#  name_file    :string(50)
						#  name_author  :string(50)
						#  name_admin   :string(50)
						#  key_words    :text
						#  date_article :date
						#  created_at   :datetime
						#  updated_at   :datetime
						#  article_type :string(20)
						#  description  :string(100)	 
						-->

						<h1>Archive:</h1>
						<br />
						<p>ID: <%= @archive.id %></p>
						<br />
						<p>Article ID: <%= @archive.article_id %></p>
						<br />
						<p>Created: <%= @archive.created_at.to_formatted_s(:db) %></p>
						<br />
						<p>Updated: <%= @archive.updated_at.to_formatted_s(:db) %></p>
						<br />
						<p>Admin: <%= @archive.name_admin %></p>
						<br />
						<p>Author: <%= @archive.name_author %></p>
						<br />
						<p>Article Date: <%= @archive.date_article %></p>
						<br />
						<p>Genre: <%= @archive.article_type %></p>
						<br />
						<p>Subtitle Main: <%= @archive.subtitle_1 %></p>
						<br />
						<p>Subtitle Small: <%= @archive.subtitle_2 %></p>
						<br />
						<p>File: <%= @archive.name_file %></p>
						<br />
						<p>URL: <%= @archive.name_url %></p>
						<br />
						<p>Link Title: <%= @archive.linktitle %></p>
						<br />
						<p>Link Img: <%= @archive.linkimg %></p>
						<br />
						<p>Link Img Height: <%= @archive.img_height %></p>
						<br />
						<p>Link Folder: <%= @archive.linkimg_url %></p>
						<br />
						<p>Description: <%= @archive.description %></p>
						<br />
						<p>Slug: <%= @archive.slug %></p>
						<br />
						<p>Key Words: <%= @archive.key_words %></p>
					</div>
					
			 		<%= button_to "Edit", {:action => 'edit', :id => @archive.id } %> 
					
				</div>
				
			</div>
			
		</div>	
		
	</div>					
					
	<div style="height: 40px;"></div>
					
