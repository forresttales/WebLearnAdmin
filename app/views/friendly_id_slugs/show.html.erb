<% @title = "Slug Record" %>

	<style>
	
		#signin-page {
			height: 100%;
			min-height: 900px;
		}
	
		#signin-page #signin-page-inner {
		    width: 80%;
		    margin: 0 auto;
		}	

		div .table-signin {
			display: table;
			background-color: #DEDB3C;
			width: 880px;
			border-radius: 20px;
			border:2px solid #254520;
			box-shadow: 1px 1px 10px #888888;
			padding-top: 40px;
			padding-bottom: 40px;
			padding-left: 60px;
		}
	
		.table-signin p {
			font-family: msyh; 
			font-size: 16px;
			color: #005187;"
		}
		
	</style>


	<div id="signin-page">
		
		<header>
	
			<%= render 'share/backtotop' %>

			<div style="height: 100px;"></div>
			
		</header>
		
		
		<div id="signin-page-inner">
			
			<div class="table-signin">
				<div class="row">
					
					<div class="cell-100percent" tabindex="1">

<!-- 
#  id             :integer          not null, primary key
#  slug           :string(255)      not null
#  sluggable_id   :integer          not null
#  sluggable_type :string(50)
#  scope          :string(255)
#  created_at     :datetime
#  updated_at     :datetime 
-->

						<h1>Slug:</h1>
						<br />
						<p>id: <%= @friendlyidslug.id %></p>
						<br />
						<p>slug: <%= @friendlyidslug.slug %></p>
						<br />
						<p>sluggable_id: <%= @friendlyidslug.sluggable_id %></p>
						<br />
						<p>sluggable_type: <%= @friendlyidslug.sluggable_type %></p>
						<br />
						<p>scope: <%= @friendlyidslug.scope %></p>
						<br />
						<p>Created: <%= @friendlyidslug.created_at.to_formatted_s(:db) %></p>
						<br />
						<p>Updated: <%= @friendlyidslug.updated_at %></p>
												
					</div>
					
			 		<%= button_to "Edit", {:action => 'edit', :id => @friendlyidslug.id } %> 
					
				</div>
				
			</div>
			
		</div>	
		
	</div>					
					
	<div style="height: 40px;"></div>
					
