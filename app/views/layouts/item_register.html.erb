<!DOCTYPE html>
<html>
    <head>
		<meta charset="utf-8">
								    	
  		<title><%= full_title(yield(:title)) %></title> 

    	<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => false %>
  		<%= javascript_include_tag "application", "data-turbolinks-track" => false %>
		<%= favicon_link_tag source='logo-lc-round-fav.png' %>
  		<%= include_gon %>
	  	<%= csrf_meta_tags %>
	  	<%= render 'layouts/shim' %>  

		<style>
		
			#debug {
				background-color: red;
				font-family:Arial, Helvetica, sans-serif;
				font-size: 16px;
				color: #000;
			}
			html{
			  	height: 100%;
			}
			body {
			  	min-height: 100%;
			}
			.div-yield {
				width: 1200px; 
				margin-right: auto; 
				margin-left: auto; 
				background: #fff;
			}
			.div-footer {
				width: 100%; 
				position: absolute; 
				bottom: 0px;
			}
		
		</style>

    </head>
	<body>

		<% if !signed_in? %> 
			<%= render 'layouts/signin' %> 
		<% else %>
			<%= render 'layouts/nav_admin' %>
			<div class="div-yield">						
				<%= yield %> 
			</div>
			<div class="div-footer">
				<%= render 'layouts/footer_admin' %>
			</div>
		<% end %>

		<%= debug(params) if Rails.env.development? %>
		
	</body>
</html>
