<% provide(:title, 'Contact') %>

	<style>
	
		#signin-page {
			height: 100%;
			min-height: 900px;
		}
	
		#signin-page #signin-page-inner {
		    width: 80%;
		    margin: 0 auto;
		}	

		div .table-signin {
			display: table;
			background-color: #E6DFC8;
			width: 800px;
			height: 400px;
			padding-top: 40px;
			padding-bottom: 40px;
			padding-left: 60px;
		}
	
		.table-signin p {
			font-family: msyh; 
			font-size: 16px;
			color: #005187;"
		}
		
		.txtarea {
			border: none;
			background-color: #fff;
			resize: none;	
			height: 600px;
    		font-family:Arial, Helvetica, sans-serif;
    		font-size: 14px;
			color: #000;
			line-height: 1.2em;		
		}
		
	</style>


	<div id="signin-page">
		
		<header>
	
			<%= render 'share/backtotop' %>

			<div style="height: 160px;"></div>
			
		</header>
		
		
		<div id="signin-page-inner">
			
			<div class="table-signin">
				<div class="row">
					
					<div class="cell-100percent" tabindex="1">

						<table style="width: 800px; vertical-align: top;">
							<tr>
								<td width="160px">
									<span>Id</span>
								</td>
								<td width="300px">
									 <span><%= @admin_contact.id %></span>
								</td>
							</tr>
				
							<tr><td style="height: 10px;"></td><td></td></tr>
							<tr>
								<td>
									<span>Created</span>
								</td>
								<td>
									 <span><%= @admin_contact.created_at %></span>
								</td>
							</tr>
							<tr><td style="height: 10px;"></td><td></td></tr>
							<tr>
								<td>
									<span>Name</span>
								</td>
								<td>
									 <span><%= @admin_contact.name %></span>
								</td>
							</tr>
							<tr><td style="height: 10px;"></td><td></td></tr>
							<tr>
								<td>
									<span>Email</span>
								</td>
								<td>
									 <span><%= @admin_contact.email %></span>
								</td>
							</tr>
							<tr><td style="height: 10px;"></td><td></td></tr>
							<tr>
								<td>
									<span>Phone</span>
								</td>
								<td>
									 <span><%= @admin_contact.phone %></span>
								</td>
							</tr>
							<tr><td style="height: 10px;"></td><td></td></tr>
							<tr>
								<td>
									<span>Subject</span>
								</td>
								<td>
									 <span><%= @admin_contact.subject %></span>
								</td>
							</tr>
							<tr><td style="height: 10px;"></td><td></td></tr>
							<tr>
								<td style="vertical-align: top;">
									<span>Message</span>
								</td>
								<td>
									<textarea class="txtarea" cols="50" readonly="readonly"><%= @admin_contact.message %></textarea>
								</td>
							</tr>
						</table>

					</div>
					
			 		<!-- = button_to "Edit", {:action => 'edit', :id => @admin_contact.id } -->  
					
				</div>
				
			</div>
			
		</div>	
		
	</div>					
					
	<div style="height: 40px;"></div>
					
